@model TopicoMedico.Models.Entities.Compra
@{
    ViewData["Title"] = "Detalle de Compra";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Detalle de Compra</h4>
                <a href="@Url.Action("Compras")" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
            <div class="card-body p-4">

                <!-- Información de la Compra -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>Información del Comprobante</h6>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">N° Comprobante:</dt>
                                    <dd class="col-sm-7"><strong>@Model.NumeroComprobante</strong></dd>

                                    <dt class="col-sm-5">Tipo:</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge @(Model.TipoComprobante == "Factura" ? "bg-primary" : Model.TipoComprobante == "Boleta" ? "bg-info" : "bg-secondary")">
                                            @Model.TipoComprobante
                                        </span>
                                    </dd>

                                    <dt class="col-sm-5">Fecha:</dt>
                                    <dd class="col-sm-7">@Model.FechaCompra.ToString("dd/MM/yyyy HH:mm")</dd>

                                    <dt class="col-sm-5">Estado:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.Estado == "Completada")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Completada
                                            </span>
                                        }
                                        else if (Model.Estado == "Pendiente")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Pendiente
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Anulada
                                            </span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card border-info">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0"><i class="fas fa-truck me-2"></i>Información del Proveedor</h6>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Proveedor:</dt>
                                    <dd class="col-sm-7"><strong>@Model.Proveedor.NombreProveedor</strong></dd>

                                    <dt class="col-sm-5">RUC:</dt>
                                    <dd class="col-sm-7">@Model.Proveedor.RUC</dd>

                                    <dt class="col-sm-5">Teléfono:</dt>
                                    <dd class="col-sm-7">@Model.Proveedor.Telefono</dd>

                                    <dt class="col-sm-5">Registrado por:</dt>
                                    <dd class="col-sm-7">@Model.UsuarioRegistro.NombreCompleto</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Observaciones))
                {
                    <div class="alert alert-info">
                        <strong><i class="fas fa-info-circle me-2"></i>Observaciones:</strong>
                        @Model.Observaciones
                    </div>
                }

                <!-- Detalle de Productos -->
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Detalle de Productos</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unit.</th>
                                        <th>Subtotal</th>
                                        <th>Lote</th>
                                        <th>F. Vencimiento</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.DetallesCompra != null && Model.DetallesCompra.Any())
                                    {
                                        int contador = 1;
                                        @foreach (var detalle in Model.DetallesCompra)
                                        {
                                            <tr>
                                                <td>@contador</td>
                                                <td>
                                                    <strong>@detalle.Producto.NombreProducto</strong>
                                                    <br />
                                                    <small class="text-muted">@detalle.Producto.CodigoProducto</small>
                                                </td>
                                                <td>@detalle.Cantidad @detalle.Producto.UnidadMedida</td>
                                                <td>@detalle.PrecioUnitario.ToString("C2")</td>
                                                <td class="fw-bold">@detalle.Subtotal.ToString("C2")</td>
                                                <td>@(detalle.Lote ?? "N/A")</td>
                                                <td>
                                                    @if (detalle.FechaVencimiento.HasValue)
                                                    {
                                                        @detalle.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">N/A</span>
                                                    }
                                                </td>
                                            </tr>
                                            contador++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center text-muted">
                                                No hay detalles para esta compra
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-light">
                                        <td colspan="4" class="text-end fw-bold">TOTAL:</td>
                                        <td class="fw-bold text-success fs-5">@Model.MontoTotal.ToString("C2")</td>
                                        <td colspan="2"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Botones de Acción -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Compras")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a Compras
                    </a>
                    <button onclick="window.print()" class="btn btn-primary">
                        <i class="fas fa-print me-2"></i>Imprimir
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        @@media print {
            .btn, .card-header a {
                display: none !important;
            }
        }
    </style>
}