@model TopicoMedico.Models.ViewModels.DashboardAdminViewModel
@{
    ViewData["Title"] = "Dashboard Administrador";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chart-line me-2"></i>Dashboard Administrador</h2>
    <span class="text-muted">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</span>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h3 class="display-4 fw-bold">@Model.TotalUsuarios</h3>
                <p class="text-muted mb-0">Usuarios Activos</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="fas fa-user-injured fa-3x text-success mb-3"></i>
                <h3 class="display-4 fw-bold">@Model.TotalPacientes</h3>
                <p class="text-muted mb-0">Pacientes</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="fas fa-user-nurse fa-3x text-info mb-3"></i>
                <h3 class="display-4 fw-bold">@Model.TotalEnfermeras</h3>
                <p class="text-muted mb-0">Enfermeras</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="fas fa-dollar-sign fa-3x text-warning mb-3"></i>
                <h3 class="display-6 fw-bold">@Model.MontoComprasMes.ToString("C")</h3>
                <p class="text-muted mb-0">Compras del Mes</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Alertas Críticas</h5>
            </div>
            <div class="card-body">
                @if (Model.AlertasCriticas != null && Model.AlertasCriticas.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var alerta in Model.AlertasCriticas.Take(5))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-bell text-danger me-2"></i>
                                    <strong>@alerta.Mensaje</strong>
                                    <br />
                                    <small class="text-muted">@alerta.FechaGeneracion.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                <span class="badge bg-danger">@alerta.Prioridad</span>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Alertas")" class="btn btn-sm btn-outline-primary">Ver Todas las Alertas</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <p>No hay alertas críticas</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-box me-2"></i>Productos con Stock Bajo</h5>
            </div>
            <div class="card-body">
                @if (Model.ProductosAlerta != null && Model.ProductosAlerta.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Stock</th>
                                    <th class="text-center">Mínimo</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model.ProductosAlerta.Take(5))
                                {
                                    <tr>
                                        <td>
                                            <strong>@producto.NombreProducto</strong>
                                            <br />
                                            <small class="text-muted">@producto.CodigoProducto</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge @(producto.StockActual == 0 ? "bg-danger" : "bg-warning")">
                                                @producto.StockActual
                                            </span>
                                        </td>
                                        <td class="text-center">@producto.StockMinimo</td>
                                        <td>
                                            <a href="@Url.Action("CrearCompra")" class="btn btn-sm btn-primary">
                                                <i class="fas fa-shopping-cart"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Productos")" class="btn btn-sm btn-outline-primary">Ver Todos los Productos</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-check-circle fa-3x mb-3 text-success"></i>
                        <p>Todos los productos tienen stock suficiente</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Accesos Rápidos</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("CrearUsuario")" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-user-plus fa-2x d-block mb-2"></i>
                            Crear Usuario
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("CrearProducto")" class="btn btn-outline-success btn-lg w-100">
                            <i class="fas fa-plus-circle fa-2x d-block mb-2"></i>
                            Nuevo Producto
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("CrearCompra")" class="btn btn-outline-info btn-lg w-100">
                            <i class="fas fa-shopping-cart fa-2x d-block mb-2"></i>
                            Solicitar Medicamento
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("ReporteCompras")" class="btn btn-outline-warning btn-lg w-100">
                            <i class="fas fa-file-alt fa-2x d-block mb-2"></i>
                            Ver Reportes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
