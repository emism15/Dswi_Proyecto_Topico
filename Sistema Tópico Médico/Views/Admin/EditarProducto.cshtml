@model TopicoMedico.Models.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Editar Producto</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="EditarProducto" method="post">
                    <input type="hidden" asp-for="ProductoId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CodigoProducto" class="form-label"></label>
                            <input asp-for="CodigoProducto" class="form-control" readonly />
                            <small class="text-muted">El código no se puede modificar</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="NombreProducto" class="form-label"></label>
                            <input asp-for="NombreProducto" class="form-control" />
                            <span asp-validation-for="NombreProducto" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoriaId" class="form-label"></label>
                            <select asp-for="CategoriaId" class="form-select" asp-items="@(new SelectList(Model.CategoriasDisponibles, "CategoriaId", "NombreCategoria"))">
                                <option value="">-- Seleccione una Categoría --</option>
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TipoProducto" class="form-label"></label>
                            <select asp-for="TipoProducto" class="form-select">
                                <option value="">-- Seleccione un Tipo --</option>
                                <option value="Medicamento">Medicamento</option>
                                <option value="Implemento">Implemento</option>
                            </select>
                            <span asp-validation-for="TipoProducto" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label asp-for="StockActual" class="form-label"></label>
                            <input asp-for="StockActual" type="number" class="form-control" min="0" />
                            <span asp-validation-for="StockActual" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label asp-for="StockMinimo" class="form-label"></label>
                            <input asp-for="StockMinimo" type="number" class="form-control" min="1" />
                            <span asp-validation-for="StockMinimo" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label asp-for="UnidadMedida" class="form-label"></label>
                            <select asp-for="UnidadMedida" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option value="Unidades">Unidades</option>
                                <option value="Cajas">Cajas</option>
                                <option value="Frascos">Frascos</option>
                                <option value="Blister">Blister</option>
                                <option value="ml">Mililitros (ml)</option>
                                <option value="gr">Gramos (gr)</option>
                            </select>
                            <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label asp-for="PrecioUnitario" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input asp-for="PrecioUnitario" type="number" step="0.01" class="form-control" />
                            </div>
                            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Laboratorio" class="form-label"></label>
                            <input asp-for="Laboratorio" class="form-control" />
                            <span asp-validation-for="Laboratorio" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Lote" class="form-label"></label>
                            <input asp-for="Lote" class="form-control" />
                            <span asp-validation-for="Lote" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="FechaVencimiento" class="form-label"></label>
                            <input asp-for="FechaVencimiento" type="date" class="form-control" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input asp-for="RequiereReceta" class="form-check-input" type="checkbox" />
                                <label asp-for="RequiereReceta" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input asp-for="Activo" class="form-check-input" type="checkbox" />
                                <label asp-for="Activo" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Productos")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning text-dark">
                            <i class="fas fa-save me-2"></i>Actualizar Producto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}