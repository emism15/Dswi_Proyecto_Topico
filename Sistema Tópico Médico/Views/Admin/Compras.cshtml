@model List<TopicoMedico.Models.Entities.Compra>
@{
    ViewData["Title"] = "Gestión de Compras";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shopping-cart me-2"></i>Gestión de Compras</h2>
    <a href="@Url.Action("CrearCompra")" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nueva Compra
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="tablaCompras">
                <thead class="table-light">
                    <tr>
                        <th>N° Comprobante</th>
                        <th>Tipo</th>
                        <th>Proveedor</th>
                        <th>Fecha</th>
                        <th>Monto Total</th>
                        <th>Registrado por</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var compra in Model)
                        {
                            <tr>
                                <td><strong>@compra.NumeroComprobante</strong></td>
                                <td>
                                    <span class="badge @(compra.TipoComprobante == "Factura" ? "bg-primary" : compra.TipoComprobante == "Boleta" ? "bg-info" : "bg-secondary")">
                                        @compra.TipoComprobante
                                    </span>
                                </td>
                                <td>@compra.Proveedor?.NombreProveedor</td>
                                <td>@compra.FechaCompra.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-bold text-success">@compra.MontoTotal.ToString("C2")</td>
                                <td>@compra.UsuarioRegistro?.NombreCompleto</td>
                                <td>
                                    @if (compra.Estado == "Completada")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Completada
                                        </span>
                                    }
                                    else if (compra.Estado == "Pendiente")
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock"></i> Pendiente
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times"></i> Anulada
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("DetalleCompra", new { id = compra.CompraId })"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Ver detalles">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr class="fw-bold">
                        <td colspan="4" class="text-end">TOTAL:</td>
                        <td class="text-success">
                            @if (Model != null)
                            {
                                @Model.Sum(c => c.MontoTotal).ToString("C2")
                            }
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-4">
        <div class="card border-primary">
            <div class="card-body">
                <h6 class="card-title text-primary">
                    <i class="fas fa-shopping-cart"></i> Total Compras
                </h6>
                <p class="card-text display-6">@Model.Count</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-success">
            <div class="card-body">
                <h6 class="card-title text-success">
                    <i class="fas fa-dollar-sign"></i> Monto Total
                </h6>
                <p class="card-text display-6">@Model.Sum(c => c.MontoTotal).ToString("C2")</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-body">
                <h6 class="card-title text-info">
                    <i class="fas fa-calendar"></i> Este Mes
                </h6>
                <p class="card-text display-6">
                    @Model.Count(c => c.FechaCompra.Month == DateTime.Now.Month && c.FechaCompra.Year == DateTime.Now.Year)
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#tablaCompras').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                order: [[3, 'desc']]
            });
        });
    </script>
}