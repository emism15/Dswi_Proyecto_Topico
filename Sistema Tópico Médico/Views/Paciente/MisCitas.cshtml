@model List<TopicoMedico.Models.Entities.Cita>
@{
    ViewData["Title"] = "Mis Citas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-alt me-2"></i>Mis Citas</h2>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filtros -->
<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <select id="filtroEstado" class="form-select">
                    <option value="">Todos los Estados</option>
                    <option value="Pendiente">Pendientes</option>
                    <option value="Atendida">Atendidas</option>
                    <option value="Cancelada">Canceladas</option>
                </select>
            </div>
            <div class="col-md-4">
                <input type="date" id="filtroFecha" class="form-control" placeholder="Filtrar por fecha">
            </div>
        </div>
    </div>
</div>

<!-- Resumen -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <h6 class="text-warning">
                    <i class="fas fa-clock"></i> Pendientes
                </h6>
                <h3 class="mb-0">@Model.Count(c => c.EstadoCita == "Pendiente")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <h6 class="text-success">
                    <i class="fas fa-check-circle"></i> Atendidas
                </h6>
                <h3 class="mb-0">@Model.Count(c => c.EstadoCita == "Atendida")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-danger">
            <div class="card-body text-center">
                <h6 class="text-danger">
                    <i class="fas fa-times-circle"></i> Canceladas
                </h6>
                <h3 class="mb-0">@Model.Count(c => c.EstadoCita == "Cancelada")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <h6 class="text-primary">
                    <i class="fas fa-list"></i> Total
                </h6>
                <h3 class="mb-0">@Model.Count</h3>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Citas -->
<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="tablaCitas">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha y Hora</th>
                            <th>Motivo</th>
                            <th>Enfermera</th>
                            <th>Diagnóstico</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cita in Model.OrderByDescending(c => c.FechaCita))
                        {
                            var esPendiente = cita.EstadoCita == "Pendiente";
                            var esProxima = cita.FechaCita >= DateTime.Now && esPendiente;

                            <tr class="@(esProxima ? "table-warning" : "")"
                                data-estado="@cita.EstadoCita"
                                data-fecha="@cita.FechaCita.ToString("yyyy-MM-dd")">
                                <td>
                                    <strong>@cita.FechaCita.ToString("dd/MM/yyyy")</strong>
                                    <br />
                                    <small class="text-muted">@cita.FechaCita.ToString("HH:mm")</small>
                                    @if (esProxima)
                                    {
                                        <br />
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-star"></i> Próxima
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div style="max-width: 250px;">
                                        @cita.MotivoConsulta
                                    </div>
                                </td>
                                <td>
                                    @if (cita.Enfermera != null)
                                    {
                                        <span>@cita.Enfermera.NombreCompleto</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Por asignar</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(cita.Diagnostico))
                                    {
                                        <div style="max-width: 200px;">
                                            @cita.Diagnostico
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (cita.EstadoCita == "Pendiente")
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock"></i> Pendiente
                                        </span>
                                    }
                                    else if (cita.EstadoCita == "Atendida")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Atendida
                                        </span>
                                    }
                                    else if (cita.EstadoCita == "Cancelada")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times"></i> Cancelada
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-ban"></i> @cita.EstadoCita
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("DetalleCita", new { id = cita.CitaId })"
                                           class="btn btn-outline-primary"
                                           title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (esPendiente && cita.FechaCita > DateTime.Now)
                                        {
                                            <button type="button"
                                                    class="btn btn-outline-danger"
                                                    onclick="confirmarCancelacion(@cita.CitaId, '@cita.FechaCita.ToString("dd/MM/yyyy HH:mm")')"
                                                    title="Cancelar cita">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                <h4>No tienes citas registradas</h4>
                <p class="text-muted">Contacta con enfermería para agendar una cita</p>
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmación para Cancelar -->
<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Cancelar Cita
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea cancelar la cita programada para:</p>
                <p class="text-center">
                    <strong id="fechaCita"></strong>
                </p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    Esta acción no se puede deshacer. Si desea reagendar, deberá contactar nuevamente con enfermería.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-arrow-left me-1"></i>No, mantener cita
                </button>
                <form id="formCancelar" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-1"></i>Sí, cancelar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var table = $('#tablaCitas').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                order: [[0, 'desc']]
            });

            // Filtros personalizados
            $('#filtroEstado').change(function() {
                const estado = $(this).val();
                if (estado) {
                    $('tr[data-estado]').hide();
                    $(`tr[data-estado="${estado}"]`).show();
                } else {
                    $('tr[data-estado]').show();
                }
            });

            $('#filtroFecha').change(function() {
                const fecha = $(this).val();
                if (fecha) {
                    $('tr[data-fecha]').hide();
                    $(`tr[data-fecha="${fecha}"]`).show();
                } else {
                    $('tr[data-fecha]').show();
                }
            });
        });

        function confirmarCancelacion(id, fecha) {
            document.getElementById('fechaCita').textContent = fecha;
            document.getElementById('formCancelar').action = '/Paciente/CancelarCita/' + id;
            new bootstrap.Modal(document.getElementById('modalCancelar')).show();
        }
    </script>
}