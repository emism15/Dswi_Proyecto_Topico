@model TopicoMedico.Models.Entities.Cita
@{
    ViewData["Title"] = "Detalle de Cita";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Detalle de Cita</h4>
                <a href="@Url.Action("MisCitas")" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
            <div class="card-body p-4">

                <!-- Información General -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información de la Cita</h6>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Fecha:</dt>
                                    <dd class="col-sm-7">
                                        <strong>@Model.FechaCita.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))</strong>
                                    </dd>

                                    <dt class="col-sm-5">Hora:</dt>
                                    <dd class="col-sm-7">
                                        <strong>@Model.FechaCita.ToString("HH:mm")</strong>
                                    </dd>

                                    <dt class="col-sm-5">Estado:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.EstadoCita == "Pendiente")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Pendiente
                                            </span>
                                        }
                                        else if (Model.EstadoCita == "Atendida")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Atendida
                                            </span>
                                        }
                                        else if (Model.EstadoCita == "Cancelada")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Cancelada
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Model.EstadoCita</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Fecha Registro:</dt>
                                    <dd class="col-sm-7">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

                                    @if (Model.FechaAtencion.HasValue)
                                    {
                                        <dt class="col-sm-5">Fecha Atención:</dt>
                                        <dd class="col-sm-7">@Model.FechaAtencion.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card border-info">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0"><i class="fas fa-user-nurse me-2"></i>Personal Médico</h6>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    @if (Model.Enfermera != null)
                                    {
                                        <dt class="col-sm-5">Enfermera:</dt>
                                        <dd class="col-sm-7">
                                            <strong>@Model.Enfermera.NombreCompleto</strong>
                                        </dd>

                                        <dt class="col-sm-5">DNI:</dt>
                                        <dd class="col-sm-7">@Model.Enfermera.DNI</dd>

                                        @if (!string.IsNullOrEmpty(Model.Enfermera.Telefono))
                                        {
                                            <dt class="col-sm-5">Teléfono:</dt>
                                            <dd class="col-sm-7">
                                                <i class="fas fa-phone me-1"></i>@Model.Enfermera.Telefono
                                            </dd>
                                        }
                                    }
                                    else
                                    {
                                        <dd class="col-sm-12 text-center text-muted py-3">
                                            <i class="fas fa-user-clock fa-2x mb-2 d-block"></i>
                                            Enfermera por asignar
                                        </dd>
                                    }
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Motivo de Consulta -->
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-comment-medical me-2"></i>Motivo de Consulta</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.MotivoConsulta</p>
                    </div>
                </div>

                <!-- Diagnóstico (solo si está atendida) -->
                @if (Model.EstadoCita == "Atendida" && !string.IsNullOrEmpty(Model.Diagnostico))
                {
                    <div class="card mb-3 border-success">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="fas fa-stethoscope me-2"></i>Diagnóstico</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.Diagnostico</p>
                        </div>
                    </div>
                }

                <!-- Signos Vitales -->
                @if (!string.IsNullOrEmpty(Model.SignosVitales))
                {
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-heartbeat me-2"></i>Signos Vitales</h6>
                        </div>
                        <div class="card-body">
                            @try
                            {
                                var signosVitales = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, string>>(Model.SignosVitales);
                                <div class="row">
                                    @if (signosVitales.ContainsKey("temperatura"))
                                    {
                                        <div class="col-md-3 mb-2">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <i class="fas fa-thermometer-half fa-2x text-danger mb-2"></i>
                                                    <h5 class="mb-0">@signosVitales["temperatura"]°C</h5>
                                                    <small class="text-muted">Temperatura</small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (signosVitales.ContainsKey("presionArterial"))
                                    {
                                        <div class="col-md-3 mb-2">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <i class="fas fa-heartbeat fa-2x text-primary mb-2"></i>
                                                    <h5 class="mb-0">@signosVitales["presionArterial"]</h5>
                                                    <small class="text-muted">Presión Arterial</small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (signosVitales.ContainsKey("pulso"))
                                    {
                                        <div class="col-md-3 mb-2">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                                                    <h5 class="mb-0">@signosVitales["pulso"] bpm</h5>
                                                    <small class="text-muted">Pulso</small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (signosVitales.ContainsKey("saturacionO2"))
                                    {
                                        <div class="col-md-3 mb-2">
                                            <div class="card bg-light">
                                                <div class="card-body text-center">
                                                    <i class="fas fa-lungs fa-2x text-info mb-2"></i>
                                                    <h5 class="mb-0">@signosVitales["saturacionO2"]%</h5>
                                                    <small class="text-muted">Saturación O₂</small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            catch
                            {
                                <p class="text-muted">@Model.SignosVitales</p>
                            }
                        </div>
                    </div>
                }

                <!-- Observaciones -->
                @if (!string.IsNullOrEmpty(Model.Observaciones))
                {
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-clipboard me-2"></i>Observaciones</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.Observaciones</p>
                        </div>
                    </div>
                }

                <!-- Recetas Asociadas -->
                @if (Model.Recetas != null && Model.Recetas.Any())
                {
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-prescription me-2"></i>Recetas Asociadas</h6>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                @foreach (var receta in Model.Recetas)
                                {
                                    <a href="@Url.Action("DetalleReceta", new { id = receta.RecetaId })" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Receta #@receta.RecetaId</h6>
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>@receta.FechaEmision.ToString("dd/MM/yyyy")
                                                </small>
                                            </div>
                                            <span class="badge @(receta.Estado == "Vigente" ? "bg-success" : "bg-secondary")">
                                                @receta.Estado
                                            </span>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Botones de Acción -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("MisCitas")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a Mis Citas
                    </a>
                    @if (Model.EstadoCita == "Pendiente" && Model.FechaCita > DateTime.Now)
                    {
                        <button type="button" class="btn btn-danger" onclick="confirmarCancelacion()">
                            <i class="fas fa-times me-2"></i>Cancelar Cita
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Cancelar Cita
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea cancelar esta cita?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    Esta acción no se puede deshacer.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <form asp-action="CancelarCita" asp-route-id="@Model.CitaId" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-1"></i>Sí, cancelar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarCancelacion() {
            new bootstrap.Modal(document.getElementById('modalCancelar')).show();
        }
    </script>
}