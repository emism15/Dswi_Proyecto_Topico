@model Dswi_Proyecto_Topico.Models.ViewModels.DashboardAlumnoViewModel;

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-user-injured me-2"></i>Bienvenido(a) , @Context.Session.GetString("NombreCompleto")</h2>
        <p class="text-muted">Panel de control del paciente</p>
    </div>
    <div>
        <span class="text-muted">
            <i class="fas fa-calendar me-1"></i>
            @DateTime.Now.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))
        </span>
    </div>
</div>



<div class="row mb-4">
    <div class="col-md-6">
        <div class="card border-warning">
            <div class="card-body text-center">
                <h3>@Model.CitasPendientes</h3>
                <p>Citas Pendientes</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-success">
            <div class="card-body text-center">
                <h3>@Model.CitasAtendidas</h3>
                <p>Citas Atendidas</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-calendar-day me-2"></i> Próxima Cita
    </div>
    <div class="card-body">
        @if (Model.ProximaCita != null)
        {
            <p><strong>Fecha y Hora:</strong> @Model.ProximaCita.FechaCita.ToString("dd/MM/yyyy HH:mm")</p>   

            <div class="alert alert-info mt-3">
                <i class="fas fa-hourglass-half me-1"></i>
                Faltan <strong>@Model.DiasParaProximaCita días</strong> para tu cita
            </div>
        }
        else
        {
            <p class="text-muted">No tienes citas pendientes</p>
        }
    </div>
</div>