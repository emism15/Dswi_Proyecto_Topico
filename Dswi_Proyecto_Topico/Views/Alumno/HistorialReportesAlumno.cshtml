@model List<Dswi_Proyecto_Topico.Models.ViewModels.HistorialReporteAtencionModel>

<h4 class="fw-bold text-success mb-3">
    <i class="bi bi-archive-fill me-1"></i>
    Mis Reportes de Atención
</h4>

<div class="card shadow border-0 rounded-4">
    <div class="card-header bg-success text-white">
        Reportes Generados
    </div>

    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="alert alert-secondary m-4 text-center">
                No tienes reportes generados.
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Fecha Atención</th>
                        <th>Fecha Reporte</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaAtencion.ToShortDateString()</td>
                            <td>@(item.FechaGeneracionReporte?.ToShortDateString() ?? "-")</td>
                            <td class="text-center">
                                <!-- Ver detalle -->
                                <a asp-controller="Alumno"
                                   asp-action="VerDetalleReporteAlumno"
                                   asp-route-atencionId="@item.AtencionId"
                                   class="btn btn-outline-success btn-sm"
                                   title="Ver Detalle">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <!-- Descargar PDF -->
                                <a asp-controller="Alumno"
                                   asp-action="DescargarReportePdfAlumno"
                                   asp-route-atencionId="@item.AtencionId"
                                   class="btn btn-outline-secondary btn-sm"
                                   title="Descargar PDF">
                                    <i class="bi bi-download"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
