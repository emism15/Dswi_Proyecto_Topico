@model Dswi_Proyecto_Topico.Models.ViewModels.CitasAlumnoViewModel;
@{
    ViewData["Title"] = "Mis Citas";
}

<h3 class="mb-4">
    <i class="fas fa-calendar-alt me-2"></i>Mis Citas
</h3>

@{
    var estadoFiltro = ViewBag.EstadoFiltro as string;
}
<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="btn-group" role="group">
                    <a asp-action="Citas"
                       class="btn @(string.IsNullOrEmpty(estadoFiltro) ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-list"></i> Todas
                    </a>

                    <a asp-action="Citas" asp-route-estado="Pendiente"
                       class="btn @(estadoFiltro == "Pendiente" ? "btn-warning" : "btn-outline-warning")">
                        <i class="fas fa-clock"></i> Pendientes
                    </a>

                    <a asp-action="Citas" asp-route-estado="Atendida"
                       class="btn @(estadoFiltro == "Atendida" ? "btn-success" : "btn-outline-success")">
                        <i class="fas fa-check"></i> Atendidas
                    </a>

                    <a asp-action="Citas" asp-route-estado="Cancelada"
                       class="btn @(estadoFiltro == "Cancelada" ? "btn-danger" : "btn-outline-danger")">
                        <i class="fas fa-times"></i> Canceladas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contadores -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-warning text-center">
            <div class="card-body">
                <h2>@Model.Pendientes</h2>
                <p class="mb-0">Pendientes</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-success text-center">
            <div class="card-body">
                <h2>@Model.Atendidas</h2>
                <p class="mb-0">Atendidas</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-danger text-center">
            <div class="card-body">
                <h2>@Model.Canceladas</h2>
                <p class="mb-0">Canceladas</p>
            </div>
        </div>
    </div>
</div>


<!-- Listado -->
<div class="card">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-list me-2"></i>Historial de Citas
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                       
                    <th>Tipo</th>
                    <th>Fecha y Hora</th>
                    <th>Estado</th>                  
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Citas)
                {
                    <tr>                            
                        <td>@c.TipoCita</td>
                        <td>@c.FechaCita.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (c.EstadoCita == "Pendiente")
                            {
                                <span class="badge bg-warning">Pendiente</span>
                            }
                            else if (c.EstadoCita == "Atendida")
                            {
                                <span class="badge bg-success">Atendida</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Cancelada</span>
                            }
                        </td>
                      
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Citas.Any())
        {
            <div class="text-center py-4 text-muted">
                No tienes citas registradas.
            </div>
        }
    </div>
</div>