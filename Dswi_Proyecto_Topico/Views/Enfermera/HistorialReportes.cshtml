@model List<Dswi_Proyecto_Topico.Models.ViewModels.HistorialReporteAtencionModel>
@{
    ViewData["Title"] = "Historial de Reportes de Atención";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-success mb-0">
                <i class="bi bi-archive-fill me-1"></i>
                Hitorial de Reporte de Atención
            </h4>
            <small class="text-muted">
                Consulta y descarga de reportes medicos generados
            </small>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 mb-4">
        <div class="card-body">
            <form method="get" asp-action="HistorialReportes">
                <div class="row g-3 align-items-end">

                    <div class="col-md-4">
                        <label class="form-label">Código del Alumno</label>
                        <input type="text" name="codigo" class="form-control" placeholder="Ej. i202000000" />

                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Fecha de Atención</label>
                        <input type="date" name="fecha" class="form-control"/>

                    </div>

                    <div class="col-md-4 d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-search me-1"></i>
                            Buscar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card shadow border-0 rounded-4">
    <div class="card-header bg-success text-white rounded-top-4">
        <i class="bi bi-file-earmark-text me-1"></i>
        Reportes Generados
    </div>

    <div class="card-body p-0">

        @if (!Model.Any())
        {
            <div class="alert alert-secondary m-4 text-center">
                <i class="bi bi-info-circle me-1"></i>
                No existen reportes generados.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">

                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Alumno</th>
                            <th>Fecha Atención</th>
                            <th>Fecha Reporte</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold text-success">
                                    @item.Codigo
                                </td>

                                <td>
                                    <i class="bi bi-person-circle text-secondary me-1"></i>
                                    @item.NombreCompleto
                                </td>

                                <td>
                                    <span class="badge bg-success-subtle text-success">
                                        @item.FechaAtencion.ToShortDateString()
                                    </span>
                                </td>

                                <td>
                                    <span class="badge bg-secondary-subtle text-secondary">
                                        @(item.FechaGeneracionReporte?.ToShortDateString() ?? "-")
                                    </span>
                                </td>

                                <td class="text-center">

                                    <a asp-action="VerDetalleReporte"
                                       asp-route-atencionId="@item.AtencionId"
                                       class="btn btn-outline-success btn-sm me-1"
                                       title="Ver Reporte">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a asp-action="DescargarReportePdf"
                                       asp-route-id="@item.AtencionId"
                                       class="btn btn-outline-secondary btn-sm"
                                       title="Descargar PDF">
                                        <i class="bi bi-download"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        }

    </div>
</div>
</div>
