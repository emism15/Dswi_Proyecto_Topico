@model Dswi_Proyecto_Topico.Models.ViewModels.ReporteAtencionModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial;
            font-size: 12px;
        }

        h2 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }

        td, th {
            border: 1px solid #000;
            padding: 6px;
        }

        .section {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <h2>REPORTE DE ATENCIÓN MÉDICA</h2>

    <div class="section">
        <h4>Datos del Alumno</h4>
        <table>
            <tr><th>Código</th><td>@Model.Codigo</td></tr>
            <tr><th>Nombre</th><td>@Model.NombreCompleto</td></tr>
            <tr><th>DNI</th><td>@Model.DNI</td></tr>
            <tr><th>Teléfono</th><td>@Model.Telefono</td></tr>
            <tr><th>Correo</th><td>@Model.Correo</td></tr>
        </table>
    </div>

    <div class="section">
        <h4>Datos de la Atención</h4>
        <table>
            <tr><th>Fecha</th><td>@Model.FechaAtencion.ToShortDateString()</td></tr>
            <tr><th>Hora</th><td>@Model.HoraAtencion</td></tr>
            <tr><th>Diagnóstico</th><td>@Model.DiagnosticoPreliminar</td></tr>
            <tr><th>Detalles Clínicos</th><td>@Model.DetallesClinicos</td></tr>
        </table>
    </div>

    <div class="section">
        <h4>Medicamentos Administrados</h4>
        <table>
            <thead>
                <tr><th>Medicamento</th><th>Cantidad</th></tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Medicamentos)
                {
                    <tr>
                        <td>@m.Nombre</td>
                        <td>@m.Cantidad</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>

