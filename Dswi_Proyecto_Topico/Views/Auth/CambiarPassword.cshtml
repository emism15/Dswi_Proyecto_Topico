@model Dswi_Proyecto_Topico.Models.ViewModels.CambiarPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Cambiar Contraseña</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #facc15 0%, #eab308 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, sans-serif;
        }

        .card-box {
            max-width: 480px;
            width: 100%;
            background: #fff;
            border-radius: 22px;
            padding: 45px 40px;
            box-shadow: 0 25px 60px rgba(0,0,0,.25);
        }

        .card-box h2 {
            text-align: center;
            font-weight: 700;
            color: #713f12;
        }

        .alert {
            border-radius: 12px;
            border: none;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px;
        }

        .btn-save {
            width: 100%;
            padding: 14px;
            border-radius: 12px;
            background: linear-gradient(135deg, #16a34a, #15803d);
            border: none;
            color: white;
            font-weight: 600;
            font-size: 1.05rem;
        }

        .btn-save:hover {
            box-shadow: 0 10px 25px rgba(22,163,74,.4);
            transform: translateY(-2px);
        }
    </style>
</head>

<body>

<div class="card-box">

    <h2 class="mb-3">
        <i class="fas fa-key me-1"></i>
        Cambio de Contraseña
    </h2>

    <div class="alert alert-warning text-center mb-4">
        <i class="fas fa-exclamation-triangle me-1"></i>
        Por seguridad, debe cambiar su contraseña antes de continuar.
    </div>

    <form asp-action="CambiarPassword" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Password actual -->
        <div class="mb-3">
            <label asp-for="PasswordActual" class="form-label">
                <i class="fas fa-lock me-1"></i> Contraseña actual
            </label>
            <input asp-for="PasswordActual" type="password" class="form-control password-field" />
            <span asp-validation-for="PasswordActual" class="text-danger"></span>
        </div>

        <!-- Password nueva -->
        <div class="mb-3">
            <label asp-for="PasswordNueva" class="form-label">
                <i class="fas fa-key me-1"></i> Nueva contraseña
            </label>
            <input asp-for="PasswordNueva" type="password" class="form-control password-field" />
            <span asp-validation-for="PasswordNueva" class="text-danger"></span>
        </div>

        <!-- Confirmar password -->
        <div class="mb-3">
            <label asp-for="ConfirmarPassword" class="form-label">
                <i class="fas fa-check-circle me-1"></i> Confirmar contraseña
            </label>
            <input asp-for="ConfirmarPassword" type="password" class="form-control password-field" />
            <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
        </div>

        <!-- Ver contraseña -->
        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" id="verPassword" onclick="togglePassword()">
            <label class="form-check-label" for="verPassword">
                <i class="fas fa-eye me-1"></i> Ver contraseñas
            </label>
        </div>

        <button type="submit" class="btn btn-save">
            <i class="fas fa-save me-2"></i>
            Guardar Nueva Contraseña
        </button>

    </form>
</div>

<partial name="_ValidationScriptsPartial" />

<script>
    function togglePassword() {
        const campos = document.querySelectorAll(".password-field");
        campos.forEach(campo => {
            campo.type = campo.type === "password" ? "text" : "password";
        });
    }
</script>

</body>
</html>
